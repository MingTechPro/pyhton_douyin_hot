{
  "urls": {
    "hot_list": "https://www.douyin.com/hot",
    "video": "https://www.douyin.com/video"
  },
  "request": {
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/139.0.0.0 Safari/537.36"
    },
    "timeouts": {
      "hot_list": 30,
      "video_detail": 10
    },
    "retry": {
      "hot_list_max_retries": 3,
      "hot_list_delay": 2,
      "video_detail_max_retries": 2,
      "video_detail_delay": 2
    }
  },
  "crawler": {
    "max_items": 10,
    "request_interval": 1,
    "skip_top_item": true,
    "enable_cache": true,
    "cache_duration": 300,
    "concurrent_requests": false
  },
  "browser": {
    "headless": false,
    "disable_dev_shm_usage": true,
    "no_sandbox": false
  },
  "video_download": {
    "enabled": false,
    "download_dir": "douyin_video",
    "max_file_size": 209715200,
    "max_concurrent": 3,
    "timeout": 30,
    "chunk_size": 8192,
    "max_retries": 3,
    "retry_delay": 1.0,
    "auto_download": false
  },
  "url_encoding": {
    "enabled": true,
    "method": "url_encode",
    "encoding": "utf-8",
    "safe_chars": ""
  },
  "output": {
    "format": "json",
    "indent": 2,
    "ensure_ascii": false,
    "default_path": "douyin_data",
    "filename_template": "douyin_hotlist_{timestamp}"
  },
  "logging": {
    "level": "INFO",
    "console_level": "INFO",
    "file_level": "DEBUG",
    "log_file": "logs/spider_{timestamp}.log",
    "max_file_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "cleanup_old_logs": true,
    "log_retention_days": 7
  }
}
